<!DOCTYPE html>
<html lang="en">
<head>
    <!--HTML head content -->
</head>
<body>
    <h1>All Sales Data</h1>
    <table>
        <thead>
            <!-- Table headers -->
             
            <tr>
                <th>Invoice ID</th>
                <th>Branch</th>
                <th>City</th>
                <th>Customer Type</th>
                <th>Product Line</th>
                <th>Name</th>
                <th>Image</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Date</th>
                <th>Time</th>
                <th>Payment</th>
                <th>COGS</th>
                <th>Gross Income</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            {{#each jsonData}}
                {{#if (isNotZero Rating)}}
                    <tr data-rating="{{convertZero Rating}}">
                        <td>{{Invoice_ID}}</td>
                        <td>{{Branch}}</td>
                        <td>{{City}}</td>
                        <td>{{Customer_type}}</td>
                        <td>{{Product_line}}</td>
                        <td>{{name}}</td>
                        <td><img src="{{image}}" alt="Product Image" width="100" height="100"></td>
                        <td>{{Unit_price}}</td>
                        <td>{{Quantity}}</td>
                        <td>{{Total}}</td>
                        <td>{{Date}}</td>
                        <td>{{Time}}</td>
                        <td>{{Payment}}</td>
                        <td>{{cogs}}</td>
                        <td>{{gross_income}}</td>
                        <td>{{Rating}}</td>
                    </tr>
                {{/if}}
            {{/each}}
        </tbody>
    </table>
</body>
</html>
